{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "jest.config.ts",
    "src/test-setup.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
