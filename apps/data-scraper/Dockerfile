# Run the container with `docker run -p 3000:3000 -t data-scraper`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system data-scraper && \
          adduser --system -G data-scraper data-scraper

COPY dist/apps/data-scraper data-scraper/
RUN chown -R data-scraper:data-scraper .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix data-scraper --omit=dev -f install

CMD [ "node", "data-scraper" ]
