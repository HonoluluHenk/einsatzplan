{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitOverride": true,
    "paths": {
      "@einsatzplan/einsatzplan-lib/*": [
        "libs/einsatzplan-lib/src/lib/*"
      ],
      "@einsatzplan/shared-fns": [
        "libs/shared-fns/src/index.ts"
      ],
      "@einsatzplan/shared-ui/*": [
        "libs/shared-ui/src/lib/*"
      ]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
